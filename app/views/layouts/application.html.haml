!!!
%html
	%head
		%title
			= @title
		%link{ :rel => 'shortcut icon', :href => '/images/favicon.ico', :type => 'image/x-icon' }
		= stylesheet_link_tag 'screen', :media => 'screen, projection'
		= stylesheet_link_tag 'main', :media => 'screen, projection' if controller_name == 'main'
		= stylesheet_link_tag 'sites', :media => 'screen, projection' if controller_name == 'sites'
		= stylesheet_link_tag 'print.css', :media => 'print'
		= javascript_include_tag :defaults
		= javascript_include_tag 'main' if controller_name == 'main'
		-	if controller_name == 'articles'
			%script{ :type => 'text/javascript', :src => 'https://apis.google.com/js/plusone.js' }
				{lang: 'ru'}
		= csrf_meta_tag
		= include_gritter
	%body
		= gflash
		= gritter_flash_messages
		= render 'shared/header'
		#wrapper
			#content
				- if controller_name == 'main'
					= yield
				- else
					.box2
						= yield
						.clear
			#sidebar
				= render 'shared/sidebar/contacts'
				= render 'shared/sidebar/new_sites'
				= render 'shared/sidebar/last_in_blog'
		.clear
		= render 'shared/footer'
