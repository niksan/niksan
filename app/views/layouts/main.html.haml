!!!
%html
  %head
    %title
      NikSan
    = stylesheet_link_tag 'screen.css', 'main', :media => 'screen, projection'
    = stylesheet_link_tag 'print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults, 'main'
    = csrf_meta_tag
    = include_gritter
  %body
    = gflash
    = gritter_flash_messages
    = render 'shared/header'
    #wrapper
      #content
        = yield
      #sidebar
        = render 'shared/sidebar/contacts'
        = render 'shared/sidebar/new_sites'
        = render 'shared/sidebar/last_in_blog'
    .clear
    = render 'shared/footer'
